<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgX"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_baseline_clear_24" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edtMkCu"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/pass"
        android:hint=" Mật khẩu cũ"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_eye_24"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bo_edt"
        />
    <EditText
        android:id="@+id/edtMkMoi"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/pass"
        android:hint=" Mật khẩu mới"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_eye_24"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bo_edt"
        />
    <EditText
        android:id="@+id/edtNhapLaiMkMoi"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/pass"
        android:hint=" Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_eye_24"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/bo_edt"
        />

    <TextView
        android:id="@+id/txtBao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:textColor="#FD0202"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btnDoiPass"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Đổi mật khẩu"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="#C83737"
        />
</LinearLayout>