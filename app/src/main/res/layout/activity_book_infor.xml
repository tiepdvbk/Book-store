<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book.BookInfor"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F4EDDE"
        android:gravity="center">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_243" />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/ibtnCard"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginStart="58dp"
                android:background="@drawable/cart" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgBiaSach"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/c"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:background="#DDDDDD"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trưởng thành đôi khi cũng khóc"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="18sp"
                    android:text="269.969đ"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/txtGprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="312.000đ"
                    android:gravity=""
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:rating="5"
                    android:layout_marginTop="2dp"
                    android:theme="@style/RatingBar"
                    style="?android:attr/ratingBarStyleSmall"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(99)"
                    android:textSize="13sp"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="13sp"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán 1,8k"
                    android:textSize="15sp"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="13sp"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:textColor="@color/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="4dp"
                    android:text="Xem đánh giá"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#DDDDDD"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN SẢN PHẨM"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#F3F1F1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Tác giả"/>
                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Twoego"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Kích Thước"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13 x 19 cm"/>
                </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#F3F1F1"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Nhà Xuất bản"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dân Trí"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Năm Xuất Bản"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2022"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="#F3F1F1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Số Trang"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="199"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Bìa"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mềm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#DDDDDD"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Mô tả"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trong cuộc sống sẽ luôn có những người với những nỗi lo sợ khi tới ngưỡng trưởng thành. Sợ bởi ngoài kia giông tố biết bao, sợ bởi những nỗi cô đơn hằng đêm che lấp chính mình..."/>
                <TextView
                    android:textColor="@color/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:text="Xem thêm"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Đọc thử"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnAdd"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:text="Thêm vào giỏ hàng"
                android:paddingStart="13dp"
                android:textColor="@color/white"
                android:background="#D32F2F"/>
            <Button
                android:id="@+id/btnBuy"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_verified_24"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:text="Mua ngay"
                android:paddingStart="13dp"
                android:textColor="@color/white"
                android:background="#1976D2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>