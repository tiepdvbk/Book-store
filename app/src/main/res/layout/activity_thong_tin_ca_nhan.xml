<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaNhan.ThongTinCaNhanActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F4EDDE"
        android:gravity="center">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_243" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="8dp"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textSize="18sp"
            android:textColor="@color/check"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp">
        </LinearLayout>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        app:cardCornerRadius="90dp"
        android:layout_width="190dp"
        app:cardElevation="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="190dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sss" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DAD2D2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#F3F1F1"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"/>
        <TextView
            android:id="@+id/txtUser"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="#F3F1F1"
    android:orientation="horizontal">
    <TextView
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"/>

    <TextView
        android:id="@+id/txtSdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textSize="16sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txtDoiTT"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Đổi thông tin"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/txtDoiPass"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Đổi mật khẩu"/>
    </LinearLayout>
</LinearLayout>