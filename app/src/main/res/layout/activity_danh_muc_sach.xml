<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnOk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F4EDDE"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_243" />

            <TextView
                android:id="@+id/txtNameDm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:text="Mua nhiá»u"
                android:textColor="#007FFD"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp">
                <ImageButton
                    android:id="@+id/ibtnSearch"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_search_24" />
                <ImageButton
                    android:id="@+id/ibtnCard"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/cart" />
            </LinearLayout>
        </RelativeLayout>
        <GridView
            android:id="@+id/grd_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:layout_margin="3dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:background="#EFEFEF"/>
    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_btn"
        android:visibility="gone"/>
</LinearLayout>